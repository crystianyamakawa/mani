<h2>Estoques</h2>
<div class="table-responsive">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @estoques.each do |estoque| %>
      <tr>
        <td><%= estoque.nome %></td>
        <td><%= estoque.tipo %></td>
        <td><%= link_to 'Mostrar', estoque %></td>
        <td><%= link_to 'Editar', edit_estoque_path(estoque) %></td>
        <td><%= link_to 'Eliminar', estoque, method: :delete, data: { confirm: 'Confirma Exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Novo Estoque ', new_estoque_path %>
