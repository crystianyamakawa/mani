<h3>Equipamentos</h3>

<div align="left">
    <%= form_tag '', :method => :get do %>
      <%= text_field_tag :codigo_equipamento, nil, :placeholder =>'Informe Codigo...'  %>
      <%= text_field_tag :nome_equipamento, nil, :placeholder =>'Informe Produto...'  %>
      <%= select_tag :tp_equipamento, options_for_select(@tp_equipamento.map{|s| s.valor} ),:prompt =>'Informe Tipo Equipamento...'  %>
      <!-- select_tag :status, @status,:prompt =>'Informe Status...' -->
      <%= submit_tag 'Filtar Registros' %>
    <% end %>
   <hr>
</div>
<div class="container-fluid">
  <div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Descrição</th>
        <th>Tipo</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Status</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @equipamentos.each do |equipamento| %>
        <tr>
          <td><%= equipamento.codigo %></td>
          <td><%= equipamento.descricao %></td>
          <td><%= equipamento.tipo %></td>
          <td><%= equipamento.marca_id %></td>
          <td><%= equipamento.ds_modelo %></td>
          <td><%= equipamento.status %></td>
          <td><%= link_to 'Mostrar', equipamento %></td>
          <td><%= link_to 'Editar', edit_equipamento_path(equipamento) %></td>
          <td><%= link_to 'Eliminar', equipamento, method: :delete, data: { confirm: 'Confirma Exclusão?' } %></td>
        </tr>
      <% end %>
      </tbody>
  </table>
  </div>
  <div class="text-center">
      <%= will_paginate @equipamentos %>
  </div>

  <%= link_to 'Novo Equipamento', new_equipamento_path %>
</div>
