<!-- Single button -->
<h3>Consulta de Contrato
  <div class="btn-group pull-right">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Ações  <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'Editar Contrato', edit_contrato_path(@contrato) %></li>
      <li><%=  link_to 'Inserir Agenda Internet', "#"  %></li>
      <li><%=  link_to 'Atualizar Valor Negociado',  { :action => 'atualiza_vl_negociado',:id => @contrato.id}  %></li>
      <li><%=  link_to 'Imprimir Contrato',  { :action => 'print',:id => @contrato.id}  %></li>
      <li><a data-toggle="modal" data-target="#fatModal">Gerar Faturamento</a></li>

      <li role="separator" class="divider"></li>
      <li><%= link_to 'Voltar Lista Contratos', contratos_path %></li>
      </ul>
  </div>
</h3>
<br>
<div class="table-responsive">
<table class="table table-striped">
  <tr>
    <td colspan="3"><strong>Tipo Evento:</strong></td>
    <td colspan="10" class="text-left"><%= @contrato.tp_evento %></td>
    <td ><strong>Descricao:</strong></td>
    <td colspan="15"><%= @contrato.descricao %></td>
  <tr>
  <tr>
      <td colspan="3"><strong>Dt Evento:</strong></td>
      <td colspan="10" class="text-left"><%= @contrato.dt_evento.strftime('%d/%m/%Y') %></td>
      <td ><strong>Cliente:</strong></td>
      <td colspan="15"><%= @contrato.cliente.nome %></td>
    <tr>

    <tr>
          <td colspan="3"><strong>Status:</strong></td>
          <td colspan="10" class="text-left"><%= @contrato.status %></td>
          <td ><strong>Valor Negociado:</strong></td>
          <td colspan="15"><%= @contrato.vl_negociado %></td>
    <tr>

    <tr>
          <td colspan="3"><strong>Criado Por:</strong></td>
          <td colspan="10" class="text-left"><%= @contrato.created_by %></td>
          <td >  <strong>Atualizado Por:</strong></td>
          <td colspan="15"><%= @contrato.updated_by %></td>
    <tr>
    <tr>
          <td colspan="3"><strong>Criado Em:</strong></td>
          <td colspan="10" class="text-left"><%= @contrato.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td >  <strong>Atualizado Em:</strong></td>
          <td colspan="15"><%= @contrato.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
    <tr>
      <tr>
            <td colspan="3"><strong>Obs:</strong></td>
            <td colspan="20" class="text-left"><%= @contrato.obs %></td>
      <tr>
</table>
</div>
<hr>
<%= render(:partial => "tabs", :locals => {:contrato => @contrato}) %>


