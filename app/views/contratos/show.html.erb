<!-- Modal Faturamento -->
<div class="modal fade" id="fatModal" tabindex="-1" role="dialog" aria-labelledby="Gerar Faturamento Contrato"  aria-hidden="true">
  <div class="modal-dialog" >
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Cancelar"><span aria-hidden="true">&times;</span></button>
         <h4 class="modal-title" id="exampleModalLabel">Gerar Faturamento Contrato</h4>
      </div>
      <div class="modal-body">
        <form>
          <td><label for="recipient-name" class="control-label">Recebimento:</label>
          </td>

          <div class="panel panel-primary">
          <table>
            <tr>
              <td><label for="recipient-name" class="control-label">Incluir Recebimentos:</label>
              </td>
              <td><select class="form-control" id="inc_entradas">
                  <option>Sim</option>
                  <option>Não</option>
                  <!-- <option>Dinheiro</option> -->
              </select>
              </td>
            </tr>
              <tr>
                <td><label for="recipient-name" class="control-label">Forma de Pagamento:</label>
                </td>
                <td><select class="form-control" id="sel1">
                    <option>Cheque</option>
                    <option>Dinheiro</option>
                </select>
                </td>
              </tr>
              <tr>

                <td><label for="recipient-name" class="control-label">Conta Bancária:</label>
                </td>
                <td><select class="form-control" id="fin_conta">
                    <option>SICREDI</option>
                    <!-- <option>Dinheiro</option> -->
                </select>
                </td>
            </tr>
              <tr>
                <td><label for="recipient-name" class="control-label">Numero de Parcelas:</label>
                </td>
                <td><input type="text" class="form-control" id="nr_parcela"></td>
              </tr>
              <tr>
                <td><label for="recipient-name" class="control-label">Valor das Parcelas:</label>
                </td>
                <td><input type="text" class="form-control" id="vl_parcela"></td>
              </tr>
              <tr>
                <td><label for="recipient-name" class="control-label">Data Inicio:</label>
                </td>
                <td><input type="date" class="form-control" id="dt_inicio"></td>
                </td>
              </tr>
              <tr>
              </table>

              </div>

                <td><label for="recipient-name" class="control-label">Incluir Despesas Padrão:</label>
                </td>
                <td><select class="form-control" id="inc_despesas">
                    <option>Sim</option>
                    <option>Não</option>
                    <!-- <option>Dinheiro</option> -->
                </select>
                </td>
              </tr>
              <tr>
                <!-- <td><label type="hidden" for="recipient-name" class="control-label">Contrato:</label>
                </td> -->
                <td><input type="hidden" class="form-control" aria-hidden="true" id="contrato_id" value = <%= @contrato.id %>>
                </td>
              </tr>


        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" id ="btnGerar" class="btn btn-primary" onclick="gerar_faturamento();"
                data-dismiss="modal">Gerar Faturmento</button>
      </div>
    </div>
  </div>
</div>
