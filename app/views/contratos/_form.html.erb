<%= form_for(@contrato) do |f| %>
  <% if @contrato.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contrato.errors.count, "error") %> prohibited this contrato from being saved:</h2>

      <ul>
      <% @contrato.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= "Descricao" %><br>
    <%= f.text_field( :descricao, size: 60) %><br>
  </div>

  <div class="field">
    <%= "Cliente" %><br>
    <%= f.select(:cliente_id, @clientes.map {|s| [s.nome, s.id]}, size: 60 ) %>
  </div>

  <div class="field">
    <%= "Tipo Evento" %><br>
    <%= f.select(:tp_evento, @tp_eventos ) %>
  </div>


  <div class="field">
    <%= "Dt Evento" %><br>
    <%= f.date_select :dt_evento,  :order => [:day, :month, :year]  %>
  </div>
  <div class="field">

  <div class="field">
      <%= "Inicio" %><br>
      <%= f.datetime_select :dt_inicio,  :order => [:day, :month, :year, :hour, :minute]   %>
  </div>
  <div class="field">
      <%= "Termino" %><br>
      <%= f.datetime_select :dt_termino,  :order => [:day, :month, :year, :hour, :minute] %>
  </div>


  <div class="field">
      <%= "Status" %><br>
      <%= f.select(:status,@status) %>
  </div>

  <div class="field">
        <%= "Valor Negociado" %><br>
        <%= f.text_field :vl_negociado %>
  </div>


  <div class="field">
    <%= "OBS" %><br>
    <%= f.text_area :obs %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
