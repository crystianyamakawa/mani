<h2>Contas Bancárias</h2>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Banco</th>
      <th>Agencia</th>
      <th>Conta</th>
      <th>Descrição</th>

      <th>Status</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @fin_conta.each do |fin_conta| %>
      <tr>
        <td><%= fin_conta.banco %></td>
        <td><%= fin_conta.agencia %></td>
        <td><%= fin_conta.conta %></td>
        <td><%= fin_conta.descricao %></td>

        <td><%= fin_conta.status %></td>
      <td><%= link_to 'Mostrar', fin_conta %></td>
        <td><%= link_to 'Editar', edit_fin_contum_path(fin_conta) %></td>
        <td><%= link_to 'Eliminar', fin_conta, method: :delete, data: { confirm: 'Confirma a Exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nova Conta Bancária', new_fin_contum_path %>
