<p id="notice"><%= notice %></p>

<h1>Listing Oferta</h1>

<table>
  <thead>
    <tr>
      <th>Nm oferta</th>
      <th>Campanha</th>
      <th>Dt inicio</th>
      <th>Dt termino</th>
      <th>Vl oferta</th>
      <th>Vl desconto</th>
      <th>Pc desconto</th>
      <th>Obs</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oferta.each do |ofertum| %>
      <tr>
        <td><%= ofertum.nm_oferta %></td>
        <td><%= ofertum.campanha_id %></td>
        <td><%= ofertum.dt_inicio %></td>
        <td><%= ofertum.dt_termino %></td>
        <td><%= ofertum.vl_oferta %></td>
        <td><%= ofertum.vl_desconto %></td>
        <td><%= ofertum.pc_desconto %></td>
        <td><%= ofertum.obs %></td>
        <td><%= ofertum.created_by %></td>
        <td><%= ofertum.updated_by %></td>
        <td><%= link_to 'Show', ofertum %></td>
        <td><%= link_to 'Edit', edit_ofertum_path(ofertum) %></td>
        <td><%= link_to 'Destroy', ofertum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

