<h2>Produtos</h2>

<div align="left">
    <%= form_tag '', :method => :get do %>
      <%= select_tag :tp_produto, options_for_select(@tp_produto.map{|s| s.valor} ),:prompt =>'Informe Tipo Produto...'  %>
      <%= text_field_tag :codigo_produto, nil, :placeholder =>'Informe Codigo...'  %>
      <%= text_field_tag :nome_produto, nil, :placeholder =>'Informe Produto...'  %>
      <%= submit_tag 'Filtar Registros' %>
    <% end %>
   <hr>
</div>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Tipo Produto</th>
      <th>Codigo Produto</th>
      <th>Nome Produto</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.tipo %></td>
        <td><%= produto.codigo %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.marca_id %></td>
        <td><%= produto.modelo %></td>
        <td><%= link_to 'Mostrar', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Eliminar', produto, method: :delete, data: { confirm: 'Confirma Exclusão?' } %></td>
      </tr>
    <% end %>
    </tbody>
</table>
</div>
<div class="text-center">
    <%= will_paginate @produtos %>
</div>

<%= link_to 'Novo Produto', new_produto_path %>
