<!-- Modal Faturamento -->
<div class="modal fade" id="mapModal" tabindex="-1" role="dialog" aria-labelledby="Mapa"  aria-hidden="true">
  <div class="modal-dialog" >
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Cancelar"><span aria-hidden="true">&times;</span></button>
         <h4 class="modal-title" id="exampleModalLabel">Mapas</h4>
      </div>
      <div class="modal-body">
        <form>
          <div id="map-container">
            <div id="map-canvas"></div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" id ="btnGerar" class="btn btn-primary" onclick="loadScript();"
                data-dismiss="modal">Atualizar Map</button>
      </div>
    </div>
  </div>
